# Database (PostgreSQL in production)
DATABASE_URL="postgresql://user:password@host:5432/dbname?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# VAPI AI
VAPI_API_KEY="your-vapi-api-key"

